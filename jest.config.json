{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "src",
  "testRegex": ".*\\.(spec|int-spec)\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "**/*.int-spec.ts"
  ],
  "coverageDirectory": "../coverage",
  "coverageReporters": ["text", "lcov"],
  "testEnvironment": "node"
}
