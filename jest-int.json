{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".int-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.spec.ts", "**/*.int-spec.ts", "!**/node_modules/**"],
  "coverageDirectory": "../coverage",
  "coverageReporters": ["lcov", "text"]
}
